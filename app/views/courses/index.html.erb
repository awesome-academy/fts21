<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "shared/sidebar" %>
    </div>
    <div class="col-md-9">
    <h4><%= t("courses.all") %></h4>
      <%= link_to t("courses.new"), new_course_path , class: "btn btn-warning btn-block" if can? :manage, @courses %>
      <% if @courses.any? %>
        <ul class="timeline">
          <%= render @courses %>
        </ul>
        <%= will_paginate @courses %>
      <% else %>
        <div class="alert alert-danger"><%= t("courses.no_course") %></div>
      <% end %>
    </div>
  </div>
</div>
